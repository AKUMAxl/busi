<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_work_rl"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:gravity="center"
    android:padding="@dimen/size_15">

    <ImageView
        android:id="@+id/item_work_pic"
        android:layout_width="@dimen/size_50"
        android:layout_height="@dimen/size_50"
        android:padding="@dimen/size_10"
        android:src="@mipmap/item_pic_byjyyjl"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/unread_count"
        android:layout_width="@dimen/size_15"
        android:layout_height="@dimen/size_15"
        android:background="@mipmap/reddot"
        android:text="9"
        android:textSize="@dimen/text_10"
        android:textColor="@color/colorBlack"
        android:gravity="center"
        android:layout_toRightOf="@+id/item_work_pic" />

    <TextView
        android:id="@+id/item_work_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_12"
        android:textColor="@color/colorBlack"
        android:layout_below="@+id/item_work_pic"
        android:gravity="center"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>