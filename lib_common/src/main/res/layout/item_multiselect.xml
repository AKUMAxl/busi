<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_multiselect"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_multiselect_tv"
        android:layout_width="0dp"
        android:layout_height="@dimen/size_40"
        android:gravity="center_vertical"
        android:textColor="@color/colorBlack"
        android:layout_marginLeft="@dimen/size_10"
        app:layout_constraintTop_toTopOf="@id/item_multiselect"
        app:layout_constraintBottom_toBottomOf="@id/item_multiselect"
        app:layout_constraintLeft_toLeftOf="@id/item_multiselect"
        app:layout_constraintRight_toLeftOf="@id/item_multiselect_cb"/>

    <CheckBox
        android:id="@+id/item_multiselect_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="false"
        app:layout_constraintTop_toTopOf="@id/item_multiselect"
        app:layout_constraintBottom_toBottomOf="@id/item_multiselect"
        app:layout_constraintLeft_toRightOf="@id/item_multiselect_tv"
        app:layout_constraintRight_toRightOf="@id/item_multiselect"
        />

</android.support.constraint.ConstraintLayout>