<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.yangchedou.lib_common.Weight.XlTitle
        android:id="@+id/multi_select_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50"

        >

    </com.yangchedou.lib_common.Weight.XlTitle>



        <com.yangchedou.lib_common.XLRecyclerView.RefreshRecyclerView
            android:id="@+id/multi_select_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/multi_select_btn"
            android:layout_below="@id/multi_select_title"
            android:layout_margin="@dimen/size_5"
            >
        </com.yangchedou.lib_common.XLRecyclerView.RefreshRecyclerView>


    <Button
        android:id="@+id/multi_select_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_40"
        android:background="@drawable/title_buttton_click"
        android:layout_margin="@dimen/size_10"
        android:text="@string/queding"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>